        <%- topbuttons %>
      </div>
      <div class="row" id="loginBox">
        <div class="pull-right">


        <% if (!currentUser) { %>
          <a href="/auth/signup">Signup</a>
          <a href="/auth/login">Login</a>
          <% } else { %>
            <h3><%= currentUser.name %></h3>
            <a href="/auth/logout">Logout</a>
            <% } %>
            <% include partials/alerts %>
        </div>
        </div>
      </div>
