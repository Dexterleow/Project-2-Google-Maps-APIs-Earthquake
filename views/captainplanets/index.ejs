

<div class="container">

  <a href="/captainplanets/new" class="btn btn-success pull-right">New Project</a>

  <h1><%= title %></h1>


  <div>
    <% captainplanets.forEach(function(captainplanet) { %>

      <div class="well">
        <h2><%= captainplanet.name %>
          <br>
          <small>Funding Required: $<%= captainplanet.amount %></small>
        </h2>
        <small><%= captainplanet.description %></small>
        <small><img src ="<%= captainplanet.picture %>"></small>

          <div>
            <a href="/captainplanets/<%= captainplanet.id %>/edit" class="btn btn-info glyphicon glyphicon-edit"></a>
            <a href="/captainplanets/<%= captainplanet.id %>" class="btn btn-danger glyphicon glyphicon-trash delete-btn"></a>
          </div>

        </div>
        <% }); %>

        <a href="/">&larr; Home</a>

      </div>
    </div>
    <%- contentFor('topbuttons') %>
